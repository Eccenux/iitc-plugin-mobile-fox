{
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"files.exclude": {
		"**/.git": true, // this is a default value
		"**/.DS_Store": true, // this is a default value

		"**/node_modules": true, // this excludes all folders named "node_modules"
		
		"**/*.lnk": true,
	},
	"search.exclude": {
		// project specific
		"*.user.js": true,

		// defaults
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true
	}
}
